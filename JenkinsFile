node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Update GIT') {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    withCredentials([usernamePassword(credentialsId: 'github', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        //def encodedPassword = URLEncoder.encode("$GIT_PASSWORD",'UTF-8')
                        sh "git config user.email parnal.patil@gmail.com"
                        sh "git config user.name ParnalPatil"
                        //sh "git switch master"
                        sh "ls"
                        sh "cat plotting-service-deployment.yaml"
                        sh "sed -i 's+parnal/codist-plotting.*+parnal/codist-plotting:${DOCKERTAG}+g' plotting-service-deployment.yaml"
                        sh "cat plotting-service-deployment.yaml"
                        // sh "export KUBECONFIG=/home/exouser/.kube/config; echo $KUBECONFIG"
                        sh "kubectl --kubeconfig /home/exouser/.kube/config apply -f plotting-service-deployment.yaml"
                        sh "git add ."
                        sh "git commit -m 'Done by Jenkins Job changemanifest: ${env.BUILD_NUMBER}'"
                        sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/${GIT_USERNAME}/kubernetesmanifest.git HEAD:main"
      }
    }
  }
}
}