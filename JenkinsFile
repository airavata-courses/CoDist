node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Update GIT') {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    withCredentials([usernamePassword(credentialsId: 'github', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        //def encodedPassword = URLEncoder.encode("$GIT_PASSWORD",'UTF-8')
                        sh "git config user.email parnal.patil@gmail.com"
                        sh "git config user.name ParnalPatil"
                        //sh "git switch master"
                        sh "cat postgres-deployment.yaml"
                        sh "cat go-deployment.yaml"
                        sh "sed -i 's+parnal/codist-plotting.*+parnal/codist-plotting:amd64+g' postgres-deployment.yaml"
                        sh "sed -i 's+parnal/codist-plotting.*+parnal/codist-plotting:amd64+g' go-deployment.yaml"
                        sh "kubectl --kubeconfig /home/exouser/.kube/config apply -f postgres-deployment.yaml"
                        sh "kubectl --kubeconfig /home/exouser/.kube/config apply -f go-deployment.yaml"
                        sh "git add ."
                        sh "git commit -m 'Done by Jenkins Job changemanifest'"
                        sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/airavata-courses/CoDist.git HEAD:dev-history-kube"
      }
    }
  }
}
}