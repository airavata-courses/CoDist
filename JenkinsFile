node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Build image') {
  
       app = docker.build("parnal/codist-plotting:amd64")
    }

    stage('Test image') {
  

        app.inside {
            sh 'echo "Tests passed"'
        }
    }

    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push()
        }
    }

    stage('Deploy image'){
         steps{
            sshagent(credentials:['ssh-key']){
                sh """ssh -tt root@149.165.152.61 -o "StrictHostKeyChecking no"  << EOF
                    whoami
                    kubectl --kubeconfig /home/exouser/.kube/config rollout restart deployment/plotting-service-deployment
                    pwd
                    exit
                    EOF"""
            }
        echo "success deploy"
         }
       }
  }
    
    // stage('Trigger ManifestUpdate') {
    //             echo "triggering updatemanifestjob"
    //             build job: 'updatemanifest'
    //     }
}





